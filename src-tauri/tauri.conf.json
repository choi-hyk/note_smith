{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "note-smith",
	"version": "0.1.0",
	"identifier": "com.tauri.dev",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"title": "note-smith",
				"width": 1600,
				"height": 1200,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null,
			"capabilities": ["default"]
		}
	},
	"plugins": {
		"fs": {
			"requireLiteralLeadingDot": false
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
